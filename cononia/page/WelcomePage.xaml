<Page x:Class="cononia.page.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cononia.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="main"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" Style="{StaticResource cononiaHeaderStyle}">
            메인페이지
        </Label>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <Button Margin="10" Click="IngredientButtonClick">재료 입력</Button>
            <Button Margin="10" Click="FoodButtonClick">음식</Button>
            <Button Margin="10">레시피</Button>
            
        </StackPanel>
        
    </Grid>



</Page>

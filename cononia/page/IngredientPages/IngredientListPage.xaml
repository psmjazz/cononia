<Page x:Class="cononia.page.IngredientPages.IngredientListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cononia.page.IngredientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IngredientListPage">

    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">재료 리스트</Label>
        <DockPanel Grid.Row="1">
            <Button Name="ItemList_Refresh" 
                    Content="Refresh"
                    HorizontalAlignment="Right"
                    Width="50" Click="ItemList_Refresh_Click"/>
        </DockPanel>
        <ListView Grid.Row="2" Name="ItemList" 
                  MouseDoubleClick="ListViewItem_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="이름" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="재고량" Width="200" DisplayMemberBinding="{Binding Stock}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
